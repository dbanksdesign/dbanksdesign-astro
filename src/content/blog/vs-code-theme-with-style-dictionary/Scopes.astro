<div>
  <code class="prism-code">
    <span data-scope="source.js" class="scope scope-0">
      <span data-scope="meta.var.expr.js" class="scope scope-1">
        <span data-scope="storage.type.js" class="scope scope-2">var</span>&nbsp;
        <span data-scope="variable.other.readwrite.js" class="scope scope-3">name</span>&nbsp;
        <span data-scope="keyword.operator.assignment.js" class="scope scope-4">=</span>&nbsp;
        <span data-scope="string.quoted.single.js" class="scope scope-5">
          <span data-scope="punctuation.definition.string.begin.js" class="scope scope-6">'</span>Danny
          <span data-scope="punctuation.definition.string.end.js" class="scope scope-7">'</span>
        </span>
      </span>
      <span data-scope="punctuation.terminator.statement.js" class="scope scope-1">;</span>
    </span>
  </code>
</div>

<style>
  .scope {
  --scope-h: var(--hue-pink);
  --scope-s: var(--s-3);
  --scope-l: var(--l-3);
  display: inline-block;
  padding: var(--size-padding-small);
  border: 2px solid hsl(
    var(--scope-h),
    var(--scope-s),
    var(--scope-l),
    0.5
  );
  position: relative;
}

.scope0 { --scope-h: var(--hue-red); }
.scope1 { --scope-h: var(--hue-orange); }
.scope2 { --scope-h: var(--hue-yellow); }
.scope3 { --scope-h: var(--hue-green); }
.scope4 { --scope-h: var(--hue-teal); }
.scope5 { --scope-h: var(--hue-blue); }
.scope6 { --scope-h: var(--hue-purple); }
.scope7 { --scope-h: var(--hue-pink); }

.scope:hover {
  background: hsl(
    var(--scope-h),
    var(--scope-s),
    var(--scope-l),
    0.25
  );
  border-color: hsl(
    var(--scope-h),
    var(--scope-s),
    var(--scope-l),
    0.5
  );
}

.scope:hover::before {
  content: attr(data-scope);
  position: absolute;
  top: -1rem;
  left: -1rem;
  z-index: 2;
  background: var(--color-background-primary);
  font-size: var(--size-font-small);
  padding: var(--size-padding-xs) var(--size-padding-tiny);
  box-shadow: 0.125rem 0.125rem var(--color-border-tertiary);
}
</style>
